<!DOCTYPE html>

<div id="sign-up">
  <h2>Signup</h2>
  <form action="/sign-up" method="POST">
    
    <label>
      Username
      <input type="text" name="username" placeholder="Your username" />
    </label>

    <label>
      Password
      <input type="password" name="password" id="input-password" placeholder="********" />
    </label>
 
    <button>Create account</button>
  </form>

    {{#if errorMessage }}
    <p>{{errorMessage}}</p>
    {{/if}}
 
</div>